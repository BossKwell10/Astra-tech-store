{% extends 'base.html.twig' %}

{% block title %}Les Catégories{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title-custom">
                        <i data-feather="list"></i>
                        Mes Catégories
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered  table-condensed table-sm" id="basic">
                        <thead class="table-light">
                        <tr>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Domaine</th>
                            <th class="text-center">Date création</th>
                            <th class="text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td class="text-left">{{ categorie.name }}</td>
                                <td class="text-left">{{ categorie.domaine.name }}</td>
                                <td class="text-center">{{ categorie.createdAt|date('d/m/Y') }}</td>
                                <td class="text-center">
                                    <a href="{{ path('app_category_edit', {'id': categorie.id}) }}">
                                        <i data-feather="edit" class="me-4"></i>
                                    </a>
                                    <a href="{{ path('app_category_delete', {'id': categorie.id}) }}">
                                        <i data-feather="trash" style="color: red"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_category_new') }}" class="btn btn-dark float-end me-2"
                       style="color: white">Nouveau</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
